{{ project_bin_path }}/kubectl config set-cluster kubernetes \
  --certificate-authority={{ gen_ssl_path }}/ca.pem \
  --embed-certs=true \
  --server=https://{{ KUBE_APISERVER }}:6443 \
  --kubeconfig={{ gen_ssl_path }}/{{ username }}.kubeconfig
# 设置客户端认证参数
{{ project_bin_path }}/kubectl config set-credentials {{ username }} \
  --client-certificate={{ gen_ssl_path }}/{{ username }}.pem \
  --client-key={{ gen_ssl_path }}/{{ username }}-key.pem \
  --embed-certs=true \
  --kubeconfig={{ gen_ssl_path }}/{{ username }}.kubeconfig
# 设置上下文参数
{{ project_bin_path }}/kubectl config set-context default \
  --cluster=kubernetes \
  --user={{ username }} \
{% if namespace != '' %}
  --namespace={{ namespace }} \
{% endif %}
  --kubeconfig={{ gen_ssl_path }}/{{ username }}.kubeconfig
# 设置默认上下文
{{ project_bin_path }}/kubectl config use-context default --kubeconfig={{ gen_ssl_path }}/{{ username }}.kubeconfig
